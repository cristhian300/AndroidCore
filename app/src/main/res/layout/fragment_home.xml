<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:background="#100F0F"
        android:gravity="center"
        android:text="BIENVENIDO A PIZZERIA LA PAMPLONERA"
        android:textColor="#F8F5F5"
        android:textSize="17dp"
        android:textStyle="bold" />


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                android:background="#009688"
                android:drawableRight="@android:drawable/ic_menu_call"
                android:gravity="center"
                android:onClick="Pedidos"
                android:text="PEDIDOS AL WHATSAPP 994057006"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/presentacion_principal"
            android:layout_margin="10dp"
            ></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cocina_pizza"
            android:layout_margin="10dp"
            ></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                android:background="#100F0F"
                android:gravity="center"
                android:text="Visitanos en:"
                android:textColor="#F8F5F5"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="50dp"
                    android:layout_height="45dp"

                    android:layout_margin="5dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/facexx"
                    android:onClick="OpcionFace" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="50dp"
                    android:layout_height="45dp"

                    android:layout_margin="5dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/instagram"
                    android:onClick="OpcionInstagran" />

            </LinearLayout>


   </LinearLayout>
    </ScrollView>

</LinearLayout>
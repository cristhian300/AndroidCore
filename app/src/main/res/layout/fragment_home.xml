<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"

                android:background="#100F0F"
                android:gravity="center"
                android:text="BIENVENIDO A PIZZERIA LA PAMPLONERA"
                android:textColor="#F8F5F5"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/acme" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/presentacion_good"></ImageView>



            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                android:background="#009688"
                android:drawableRight="@drawable/ic_delivery"
                android:gravity="center"
                android:onClick="Pedidos"
                android:text="PEDIDOS AL  994057006"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" />


<!--            <fragment-->
<!--                android:id="@+id/eslogan_fragment"-->

<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="149dp"-->

<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintRight_toRightOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->

<!--                />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/presentacion_principal"
            android:layout_margin="10dp"
            ></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cocina_pizza"
            android:layout_margin="10dp"
            ></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                android:background="#100F0F"
                android:gravity="center"
                android:text="Visitanos en:"
                android:textColor="#F8F5F5"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="50dp"
                    android:layout_height="45dp"

                    android:layout_margin="5dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/facexx"
                    android:onClick="OpcionFace" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="50dp"
                    android:layout_height="45dp"

                    android:layout_margin="5dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/instagram"
                    android:onClick="OpcionInstagran" />

            </LinearLayout>


   </LinearLayout>
    </ScrollView>

</LinearLayout>